{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "hrundel/node"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "ecmaFeatures": {
    "globalReturn": false
  },
  "globals": {
    "React": true,
    "JSX": true
  },
  "env": {
    "es6": true
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": [ 2, { "args": "none" }]
  }
}
